<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
            fx:controller="view.MainWindow">
   
    <Label layoutX="20.0" layoutY="20.0" text="Food Name:"/>

    <TextField fx:id="foodNameTextField" layoutX="120.0" layoutY="16.0" promptText="Enter food name"/>

    <Label layoutX="20.0" layoutY="60.0" text="Food Type:"/>

    <ComboBox fx:id="foodTypeComboBox" layoutX="120.0" layoutY="56.0" prefWidth="150.0">
        <items>
            <FXCollections fx:factory="observableArrayList">
                <String fx:value="Vegetable"/>
                <String fx:value="Meat"/>
                <String fx:value="Bread"/>
                <String fx:value="Fruit"/>
                <String fx:value="Dessert"/>
                <String fx:value="Ingredient"/>
            </FXCollections>
        </items>
    </ComboBox>

    <Button layoutX="120.0" layoutY="100.0" text="Add Food" onAction="#handleAddFood"/>

    <ListView fx:id="foodListView" layoutX="20.0" layoutY="140.0" prefHeight="200.0" prefWidth="250.0"/>
</AnchorPane>
